---
import Layout from '../components/_Layout/index.astro'
import { useSanityClient } from 'astro-sanity'
import Hero from '../components/Hero/index.astro'
import { getGlobalData } from '../utils/sanity/queries/getGlobalData'

const globalData = await getGlobalData()
const homepage = await useSanityClient().fetch(`*[_type == "homepage"][0]{
	mainImage,
	pageBuilder,
	fieldSeo
}`)
---

<Layout globalData={globalData} title={homepage.fieldSeo.title ?? 'Homepage'}>
	<Hero
		title="Astranity"
	/>
</Layout>